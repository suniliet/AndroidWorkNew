<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/frmQueue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imgQueue"
                android:layout_width="@dimen/photo_width"
                android:layout_height="@dimen/photo_height"
                android:adjustViewBounds="true"
                android:background="@drawable/borderimage"
                android:contentDescription="@string/app_name"
                android:cropToPadding="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_dwnloadthumb" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imgQueueMultiSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/on_focus_checkbox"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:scaleType="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imguploaded"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/ic_tick"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:scaleType="center"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="@dimen/photo_width"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/photo_height"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_videoname"
                android:layout_width="@dimen/photo_width"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="@color/White" />

            <TextView
                android:id="@+id/textView_videoapprove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="@color/Yellow" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>