<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg"
    android:gravity="top|center"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ic_tophead"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imageButton_back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_tophead"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/imageButton_refresh"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_refresh_n" />

        <ImageButton
            android:id="@+id/imageButton_overflow"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/roundedbutton"
            android:src="@drawable/ic_overflow" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.20"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.50"
                android:gravity="top|center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/button_request"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/blank"
                    android:text="You Have Request"
                    android:textColor="@color/Red" />

                <ImageButton
                    android:id="@+id/button_gelleryvideo"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundedbutton"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_make_picture_video" />

                <ImageButton
                    android:id="@+id/button_customgallery"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundedbutton"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_upload_picture_video" />

                <ImageButton
                    android:id="@+id/button_myupload"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundedbutton"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_myupload" />

                <ImageButton
                    android:id="@+id/imageButton_notofication"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ic_notifications"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_notification" />

                <ImageButton
                    android:id="@+id/imageButton_prefrenece"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundedbutton"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_mypreference" />

                <ImageButton
                    android:id="@+id/imageButton_viewsale"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundedbutton"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_viewsales" />

                <ImageButton
                    android:id="@+id/imageButton_help"
                    android:layout_width="230dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundedbutton"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_help" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
